                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>


                                                            </tr>
                                                        </tbody>
                                                    </table>


                                                </div>


                                            </div>
                                        </div>

                                        <!--fin de tabla estimaciones-->

                                        <div class="card">
                                            <div class="card-block">



                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            Gastos
                                                            <tr>
                                                                <th>#</th>
                                                                <th>Descripción</th>
                                                                <th>Fecha</th>
                                                                <th>Proveedor</th>
                                                                <th>Monto</th>





                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr ng-repeat="gasto in consulta_gastoObra">
