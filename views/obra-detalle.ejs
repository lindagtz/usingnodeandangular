                                                                <input type="text" class="form-control form-control-line" placeholder="Ingrese los primeros 3 dígitos" id="search-cb">
                                                                 
                                                            </div>
                                                        </div>
                                                                 
                                                          
                                                       

                                                        <div class="form-group">
                                                            <div class="col-sm-12">
                                                                <button ng-click="regGasto()" class="btn btn-success">Registrar</button>
                                                            </div>
                                                        </div>
                                                        <div class="alert alert-danger" ng-if="ErrorRegistrogasto">
                                                            <b>Registre todos los datos </b> 
                                                        </div>
                                                        <div class="alert alert-success" ng-if="RegistroExitoso">
                                                            <b>{{RegistroExitoso.message}}</b>
                                                            
                                                            </div> 
                                                            </form>

                                                    </div>
