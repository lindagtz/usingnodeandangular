                                                            <div class="col-md-12">
                                                                <textarea ng-model="descripcion" class="form-control form-control-line" rows="3"></textarea>
                                                            </div>
                                                        </div>

                                                        <div class="form-group">
                                                            <label class="col-md-12">Fecha de gasto:</label>
                                                            <div class="col-md-12">
                                                                <input type="date" value="" ng-model="fecha_gasto" class="form-control form-control-line">
                                                            </div>
                                                        </div>
                                                       
                                                        <div class="form-group">
                                                            <label class="col-md-12">Monto:</label>
                                                            <div class="col-md-12">
                                                                <input type="text" placeholder="$" ng-model="monto" class="form-control form-control-line nmoney">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Proveedor:</label>
                                                            <div class="col-md-12">
                                                                <input type="text" class="form-control form-control-line"  placeholder="Ingrese el nombre" id="search-query">
                                                                 
                                                            </div>
                                                        </div>
                                                     
                                                        <div class="form-group">
                                                            <label class="col-md-12">Cuenta bancaria:</label>
