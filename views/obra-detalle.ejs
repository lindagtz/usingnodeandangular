                                    <div ng-controller="Trabajo1" >
                                        <div class="card">
                                            <div class="card-block">
                                                <div class="table-responsive">
                                                    <table class="table">
                                                        <thead>
                                                            <tr>
                                                                <th>Nombre</th>
                                                                <th>Precio de contrato</th>
                                                                <th>Anticipo Pagado</th>
                                                                <th>Amortización anticipo</th>
                                                                <th>Fondo de garantía</th>
                                                                <th>Total gastos</th>
                                                                <th>Fecha de Inicio</th>
                                                                <th>Fecha límite</th>



                                                            </tr>
                                                        </thead>
                                                        <tbody>

                                                               <!--{{parametro}}-->
                                                            <tr >
                                                               <!-- var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
                                                                var today  = new Date();
                                                                
                                                                console.log(today.toLocaleDateString("en-US")); -->
                                                                <td><%=Obra.nombre%></td>
                                                                <td>$<%=(Obra.precio_contrato).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')%></td>
                                                                <td>$<%=((Obra.porcentaje_anticipo*.100) * Obra.precio_contrato).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %> </td>
                                                                <td>$</td>
                                                                <td>$</td>
                                                                <td>$</td>
                                                                <td><%=(Obra.fecha_inicio).toLocaleDateString()%></td>
                                                                <td><%=(Obra.fecha_limite).toLocaleDateString()%></td>






                                                            </tr>
                                                        </tbody>
                                                    </table>

