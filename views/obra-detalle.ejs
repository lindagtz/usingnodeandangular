                                                                <td>{{gasto.descripcion}}</td>
                                                                <td>{{gasto.fecha_gasto  | date : format : timezone}}</td>
                                                                <td>{{gasto.idProveedor.nombre}} | {{gasto.idProveedor.empresa}}</td>
                                                                <td>{{gasto.monto | currency}}</td>



                                                            </tr>
                                                        </tbody>
                                                    </table>


                                                </div>


                                            </div>
                                        </div>
                                        <!--fin de gastos-->

                                    </div>
                                </div>
                            </div>
