                                        <!--Tablita de obras-->
                                        <div class="row">
                                            <div class="col-md-6 ">
                                                <h5>Registro de estimaciones</h5>
                                                <div class="card">
                                                    <div class="card-block">
                                                        <!--aqui formulario de estimaciones-->
                                                        <form class="form-horizontal form-material">

                                                        <div class="form-group">
                                                            <label class="col-md-12">Nombre: </label>
                                                            <div class="col-md-12">
                                                                <input type="text" placeholder="" ng-model="nombre" class="form-control form-control-line">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="col-md-12" class="col-md-12">Monto:</label>
                                                            <div class="col-md-12">
                                                                <input type="text" placeholder="$" ng-model="monto_est" class="form-control form-control-line number" id="monto_est" onkeyup="formulas()">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Conceptos extras:</label>
                                                            <div class="col-md-12">
                                                                <input value="" ng-model="extras" class="form-control form-control-line number" id="mextra" onkeyup="suma()">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Subtotal:</label>
                                                            <div class="col-md-12">
                                                                <input type="number" value="" ng-model="subtotal" class="form-control form-control-line" disabled id="subtotal">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">IVA:</label>
                                                            <div class="col-md-12">
                                                                <input type="number" ng-model="iva" class="form-control form-control-line" disabled id="iva">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Total:</label>
                                                            <div class="col-md-12">
                                                                <input type="number" ng-model="total" class="form-control form-control-line" disabled id="totalg">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Fecha de inicio:</label>
                                                            <div class="col-md-12">
                                                                <input type="date" ng-model="fecha_inicio" class="form-control form-control-line">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Fecha límite:</label>
                                                            <div class="col-md-12">
                                                                <input type="date" ng-model="fecha_limite" class="form-control form-control-line">
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label class="col-md-12">Cuenta bancaria:</label>
                                                            <div class="col-md-12">
                                                                <input type="text" class="form-control form-control-line" placeholder="Ingrese los primeros 3 dígitos" id="search-cbs">
                                                                 
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-sm-12">
                                                                <button class="btn btn-success" ng-click="regEstimacion()">Registrar</button>
                                                            </div>
                                                        </div>
                                                          <div class="alert alert-danger" ng-if="ErrorRegistroestimacion">
                                    <b>Registre todos los datos </b> 
                                </div>
                                <div class="alert alert-success" ng-if="RegEstimacionExitoso">
                                    <b>{{RegEstimacionExitoso.message}}</b>
                                    
                                    </div> 

                                </form>
                                 

                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-md-6 ">
                                                <h5>Registro de gastos</h5>

                                                <div class="card">
